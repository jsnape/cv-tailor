# Environment Configuration
# Copy this file to .env and fill in your values

# AI Model Configuration
# Get GitHub token from: https://github.com/settings/personal-access-tokens
# For GitHub Models: Create "Fine-grained" or "Classic" token (no special scopes needed)
GITHUB_TOKEN=
# OpenAI API key (optional - GitHub Models is the default)
OPENAI_API_KEY=
# Use GitHub Models (recommended) or OpenAI
DEFAULT_MODEL_ID=gpt-4o-mini
MODEL_PROVIDER=github
# MODEL_PROVIDER=openai

# Database Configuration
# SQLite for development (default)
DATABASE_URL=sqlite+aiosqlite:///./cv_tailor.db
# PostgreSQL for production
# DATABASE_URL=postgresql+asyncpg://username:password@localhost:5432/cv_tailor

# Security Settings
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# Application Settings
DEBUG=true
APP_NAME=CV Tailor Agent
VERSION=1.0.0

# CORS Settings (for web API access)
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000", "http://127.0.0.1:8000", "http://localhost:5173"]

# File Storage
UPLOAD_MAX_SIZE=10485760  # 10MB max file upload size
OUTPUT_DIRECTORY=./outputs  # Generated CVs and bios saved here
TEMP_DIRECTORY=./temp      # Temporary file processing

# Rate Limiting (API requests per minute per user)
RATE_LIMIT_PER_MINUTE=60